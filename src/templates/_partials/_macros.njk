{% macro pageHeader(title) %}
<header class="sub-header">
  <h2
    class="title__h-line mb-4 uppercase text-lg tracking-wider leading-none"
  >
    {{ title }}
  </h2>
</header>
<!-- /.sub-header -->
{% endmacro %}

{% macro job(company, date) %}
<div class="job my-4 py-4">
  <div class="job__info mb-4">
    <h3 class="text-lg lg:text-3xl mb-2 font-semibold font-serif">{{ company }}</h3>
    <h4 class="inline-block text-sm uppercase text-gray-500 font-semibold bg-gray-200 py-1 px-2 rounded-sm">{{ date }}</h4>
  </div>
  <div class="job__content">
    {{ caller() }}
  </div>
</div>
{% endmacro %}

{% macro list() %}
<ul class="job__task-list text-sm list-disc my-4 pl-4">
  {{ caller() }}
</ul>
{% endmacro %}

{% macro splitTitle(title, date) %}
<h5 class="my-4">
  <div class="font-semibold tracking-wide">
    <span class="text-lg">{{ title }}</span>
  </div>
  <div>
    <span class="text-sm">{{ date }}</span>
  </div>
</h5>
{% endmacro %}